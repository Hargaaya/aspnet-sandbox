<div class="home-index">

    <h1>Marketplace</h1>

    <form asp-controller="advertisements" asp-action="search" method="post">
        <input type="text" placeholder="What are you looking for today?" size="30" required />
        <select>
            <option disabled selected>Category</option>
            <option value="1">Clothes</option>
            <option value="2">Furnitures</option>
            <option value="3">Electronics</option>
            <option value="4">Hobbies</option>
        </select>
    </form>

    <div class="band">
        <div>
            <a asp-controller="advertisements" asp-action="category" asp-route-id="1">
                <i class="fa-solid fa-3x fa-shirt"></i> Clothes
            </a>
            <a asp-controller="advertisements" asp-action="category" asp-route-id="2">
                <i class="fa-solid fa-3x fa-couch"></i> Furnitures
            </a>
            <a asp-controller="advertisements" asp-action="category" asp-route-id="3">
                <i class="fa-solid fa-3x fa-computer"></i> Electronics
            </a>
            <a asp-controller="advertisements" asp-action="category" asp-route-id="4">
                <i class="fa-solid fa-3x fa-bicycle"></i> Hobbies
            </a>
        </div>
    </div>

</div>

@section scripts {
<script src="~/js/dist/Bundle.js"></script>
}